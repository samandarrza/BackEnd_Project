@model CheckoutViewModel
<div class="ltn__breadcrumb-area text-left bg-overlay-white-30 bg-image "  data-bs-bg="img/bg/14.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="ltn__breadcrumb-inner">
                        <h1 class="page-title">Checkout</h1>
                        <div class="ltn__breadcrumb-list">
                            <ul>
                                <li><a href="index.html"><span class="ltn__secondary-color"><i class="fas fa-home"></i></span> Home</a></li>
                                <li>Checkout</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="ltn__checkout-area mb-105">
        <div class="container">
            <div class="row">
                        <div class="col-lg-12">
                            <div class="shoping-cart-total mt-50">
                                <h4 class="title-2">Cart Totals</h4>
                                <table class="table">
                                    <tbody>
                                        @foreach (var item in Model.CheckoutItems)
                                        {
                                    <tr>
                                    <td>@item.Name</td>
                                    <td>$@item.TotalPrice.ToString("0.00")</td>
                                    </tr>
                            }
                                        
                                        <tr>
                                            <td><strong>Order Total</strong></td>
                                        <td><strong>$@Model.Total.ToString("0.00")</strong></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                            <h4 class="title-2">Billing Details</h4>
                    @await Html.PartialAsync("_CheckoutFormPartial",Model.Order)
            <div class="text-center">
                <button form="order-form" class="btn theme-btn-1 btn-effect-1 text-uppercase text-center" type="submit">Place order</button>
            </div>
                
            </div>
        </div>
    </div>