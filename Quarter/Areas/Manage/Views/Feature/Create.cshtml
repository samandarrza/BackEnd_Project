@model Feature
<div class="container-fluid">
    <h4>Brokers / Create</h4>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div>
                        <label asp-for="ImageFile">Image File</label>
                        <span class="text-danger" asp-validation-for="ImageFile"></span>
                        <input class="form-control" asp-for="ImageFile" placeholder="Image"><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Title"></span><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="Desc">Desc</label>
                        <input asp-for="Desc" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Desc"></span><br />
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>