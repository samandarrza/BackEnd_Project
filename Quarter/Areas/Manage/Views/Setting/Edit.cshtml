@model Setting
<div class="container-fluid">
    <h4>@Model.Key Edit</h4>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="edit" method="post">
                    <input hidden name="Key" value="@Model.Key" />
                    <div class="form-group">
                        <label asp-for="Value">Value</label>
                        <input asp-for="Value" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Value"></span>
                    </div>
                    <button type="submit" class="btn btn-primary m-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>