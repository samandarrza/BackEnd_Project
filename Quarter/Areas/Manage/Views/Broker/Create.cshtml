@model Broker
<div class="container-fluid">
    <h4>Brokers / Create</h4>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="create" method="post" enctype="multipart/form-data">
                    <div>
                        <label asp-for="ProfilFile">Image File</label>
                        <span class="text-danger" asp-validation-for="ProfilFile"></span>
                        <input class="form-control" asp-for="ProfilFile" placeholder="Image"><br />
                    </div>
                    <div class="form-group">
                        <label asp-for="Fullname">Fullname</label>
                        <input asp-for="Fullname" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>