@model Broker
<div class="container-fluid">
    <h4>Brokers / Edit</h4>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="edit" method="post">
                    <div class="form-group">
                        <label asp-for="Image">Image</label>
                        <input asp-for="Image" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Image"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Fullname">Fullname</label>
                        <input asp-for="Fullname" type="text" class="form-control" id="nameInput">
                        <span class="text-danger" asp-validation-for="Fullname"></span>
                    </div>
                    <button type="submit" class="btn btn-primary m-2">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>